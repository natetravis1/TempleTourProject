
@{
    ViewData["Title"] = "Delete Group";
}

@model Group

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the appointment for @Model.GroupName on @Model.Date at @Model.AppointmentTime?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="ListGroups" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="GroupId" />
</form>