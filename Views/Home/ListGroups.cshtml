@model List<Group>


<table class="table table-bordered table-dark table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Date</td>
            <td>Name of Group</td>
            <td>Size of Group</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Time</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Date</td>
            <td>@x.GroupName</td>
            <td>@x.GroupSize</td>
            <td>@x.Email</td>
            <td>@x.Phone</td>
            <td>@x.AppointmentTime</td>
            <td><a asp-controller="Home" asp-action="Edit" asp-route-groupid="@x.GroupId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-groupid="@x.GroupId">Delete</a></td>
        </tr>
        }

  
